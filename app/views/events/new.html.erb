<h1>Calendar</h1>  
 <%= form_for(@event) do |f| %>  
  <div class="field">  
   <%= f.label :title %><br />  
   <%= f.text_field :title %>  
  </div>  
  <div class="field">  
   <%= f.label :all_day %><br />  
   <%= f.check_box :all_day %>  
  </div>
    <div class="control-group">
      <%= label_tag "period_day", "every day", :class => "control-label" %>
      <div class="controls">
        <%= radio_button_tag 'period', 'daily', @period == 'daily' %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag "period_week", "every week", :class => "control-label" %>
      <div class="controls">
        <%= radio_button_tag 'period', 'weekly', @period == 'weekly' %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag "period_month", "every month", :class => "control-label" %>
      <div class="controls">
        <%= radio_button_tag 'period', 'monthly', @period == 'monthly' %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag "period_year", "every year", :class => "control-label" %>
      <div class="controls">
        <%= radio_button_tag 'period', 'yearly', @period == 'yearly' %>
      </div>
    </div>
  <div class="field">  
   <%= f.label :starts_at %><br />  
   <%= f.datetime_select :starts_at %>  
  </div>  
  <div class="field">  
   <%= f.label :ends_at %><br />  
   <%= f.datetime_select :ends_at %>  
  </div>
  <div class="field">  
   <%= f.label :description %><br />  
   <%= f.text_area :description %>  
  </div>  
  <div class="actions">  
   <%= f.submit %>  
  </div>  
<% end %>